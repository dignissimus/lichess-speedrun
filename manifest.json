{
  "manifest_version": 2,
  "name": "Lichess Speedrun",
  "author": "Sam Ezeh",
  "version": "0.9.0",
  "description": "Tool to allow users to perform speedruns on lichess",
  "permissions": ["storage"],
  "icons":{
    "48": "icons/icon.png"  
  },
  "content_scripts": [
    {
      "matches": ["https://lichess.org/@/*"],
      "js": ["out/profile.js"]  
    },
    {
      "matches": ["https://lichess.org/"],
      "js": ["out/lobby.js"]  
    },
    {
      "matches": ["https://lichess.org/*"],
      "js": ["out/game.js"]  
    }

  ],
  "browser_action": {
      "default_icon": "icons/icon.png",
      "default_title": "Lichess Speedrun",
      "default_popup": "src/ui/public/index.html",
      "browser_style": true
  },
  "options_ui": {
    "page": "src/ui/public/options.html",
    "browser_style": true
  }
}
