{
  "manifest_version": 2,
  "name": "Lichess Speedrun",
  "author": "Sam Ezeh",
  "version": "1.0",
  "description": "Tool to allow users to perform speedruns on lichess",
  "permissions": ["storage"],
  "icons":{
    "48": "icons/icon.png"  
  },
  "content_scripts": [
    {
      "matches": ["https://lichess.org/*"],
      "js": ["out/speedrun.js"]  
    }
  ],
  "browser_action": {
      "default_icon": "icons/icon.png",
      "default_title": "Lichess Speedrun",
      "default_popup": "src/ui/public/index.html",
      "browser_style": true
  }
}
